            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/admin/dashboard/metrics",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "admin", "dashboard", "metrics"]
            },
            "description": "Test accessing metrics without authentication (should fail)"
          },
