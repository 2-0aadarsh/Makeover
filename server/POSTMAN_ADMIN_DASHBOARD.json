    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Metrics - No Auth (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 401 or 200 with loggedIn false\", function () {",
                  "    pm.expect([200, 401]).to.include(pm.response.code);",
                  "});",
                  "",
                  "pm.test(\"Access denied\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (pm.response.code === 200) {",
                  "        pm.expect(jsonData.loggedIn).to.eql(false);",
                  "    }",
                  "});",
                  "",
                  "console.log(\"âœ… Unauthorized access blocked correctly\");"
                ],
                "type": "text/javascript"
              }
            }
          ],
